<h1>Places</h1>

<p>
  <%if @current_user%>
    <a class="btn btn-primary" href="/places/new" role="button">New Place</a>
  <%else%>
    <a class="btn btn-primary" href="/login" role="button">Login to Add Places!</a>
  <%end%>
</p>

<ul>
  <% for place in @places %>
    <%if @current_user%>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <%else%>
      <li><%= place["name"] %></li> <!--only let people click into places if they are logged in-->
    <%end%>
  <% end %>
</ul>
