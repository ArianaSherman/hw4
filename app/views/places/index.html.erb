<h1>Places</h1>

<ul>
  <% for place in @places %>
    <%if @current_user%>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <%else%>
      <li><%= place["name"] %></li> <!--only let people click into places if they are logged in-->
    <%end%>
  <% end %>
</ul>

<p>
  <%if @current_user%>
    <a href="/places/new">New place</a>
  <%else%>
    <a href="/login">Login to Add Places!<a>
  <%end%>
</p>